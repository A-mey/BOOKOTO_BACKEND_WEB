{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src", 
      "moduleResolution": "node", 
      "lib": ["es2021"],
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "experimentalDecorators": true
    },
    "exclude":[
      "./node_modules"
    ],
    "watch": "./**/*.ts",
    "execMap": {
      "ts": "ts-node"
    }
  }